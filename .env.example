DEBUG=True
API_PREFIX=/api/v1
APP_NAME="PDF Extractor API"
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=info
DATABASE_URL=postgresql://pdfuser:pdfpassword@postgres:5432/pdfdb
FILE_RETENTION_MINUTES=10

# LLM Configuration
# Provider options: "ollama" (local) or "openrouter" (hosted)
LLM_PROVIDER=ollama

# Ollama settings (for local LLM usage)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2

# OpenRouter settings (for hosted LLM usage)
# Get your API key from https://openrouter.ai/
OPENROUTER_API_KEY=
OPENROUTER_MODEL=meta-llama/llama-3.1-8b-instruct:free
OPENROUTER_SITE_URL=
OPENROUTER_SITE_NAME=PDF Extractor API